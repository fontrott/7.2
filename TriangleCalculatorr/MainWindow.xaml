<Window x:Class="TriangleCalculatorr.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Triangle Calculator" Height="276" Width="250" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="334.04"/>
        </Grid.RowDefinitions>
        <Image Margin="26,4,26,145" Source="Images/triangle-calculator.png" Stretch="Fill"/>
        <Button x:Name="InputButton" Content="Input" Margin="10,0,0,125" Click="InputButton_Click" HorizontalAlignment="Left" Width="60" Height="20" VerticalAlignment="Bottom"/>
        <Button x:Name="ResultButton" Content="Result" Margin="0,0,0,125" Click="ResultButton_Click" Height="20" VerticalAlignment="Bottom" HorizontalAlignment="Center" Width="60"/>
        <Button x:Name="ExitButton" Content="Exit" Margin="0,0,10,125" Click="ExitButton_Click" HorizontalAlignment="Right" Width="60" Height="20" VerticalAlignment="Bottom"/>
    </Grid>
</Window>